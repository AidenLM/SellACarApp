<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/rectangle1">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/recyclerViewImageView"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/mercedes_benz"
            app:shapeAppearanceOverlay="@style/circular" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="238dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="Title"/>

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/dolaricon"
            android:layout_marginStart="133dp"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="155dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/sfprodisplayregular"
            android:text="Fiyat:"
            android:textColor="@color/icon_gray"/>

        <TextView
            android:id="@+id/priceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="190dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/sfprodisplayregular"
            android:text="100.000 TL"
            android:textColor="@color/special_red"/>

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:srcCompat="@drawable/car1"
            android:layout_marginStart="133dp"
            android:layout_marginTop="53dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:fontFamily="@font/sfprodisplayregular"
            android:text="Marka:"
            android:textColor="@color/icon_gray"
            android:layout_marginStart="155dp"
            android:layout_marginTop="53dp"/>

        <TextView
            android:id="@+id/brandText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="53dp"
            android:fontFamily="@font/sfprodisplayregular"
            android:text="MERCEDES-BENZ"
            android:textColor="@color/black"/>


        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:srcCompat="@drawable/car2"
            android:layout_marginStart="133dp"
            android:layout_marginTop="76dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:fontFamily="@font/sfprodisplayregular"
            android:text="Model:"
            android:textColor="@color/icon_gray"
            android:layout_marginStart="155dp"
            android:layout_marginTop="76dp"/>

        <TextView
            android:id="@+id/modelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="76dp"
            android:fontFamily="@font/sfprodisplayregular"
            android:text="C220"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:srcCompat="@drawable/road1"
            android:layout_marginStart="133dp"
            android:layout_marginTop="99dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:fontFamily="@font/sfprodisplayregular"
            android:text="Kilometre:"
            android:textColor="@color/icon_gray"
            android:layout_marginStart="155dp"
            android:layout_marginTop="99dp"/>

        <TextView
            android:id="@+id/kilometerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:layout_marginTop="99dp"
            android:fontFamily="@font/sfprodisplayregular"
            android:text="100.000 KM"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:srcCompat="@drawable/calendar"
            android:layout_marginStart="133dp"
            android:layout_marginTop="122dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:fontFamily="@font/sfprodisplayregular"
            android:text="Yıl:"
            android:textColor="@color/icon_gray"
